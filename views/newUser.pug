extends layout
block content
	div.container
		center
			h1 Register here
		if(errors)
			h2.error Ooops an error occured!
			ul.error
				each error in errors
					li= error.message
		div.row
			form.col-md-6.col-md-offset-3(action="/newUser", method="post")
				p
					label.col-md-4(for='name') Name
					input.col-md-8(id='name', name='name', type='text')
				p
					label.col-md-4(for='email') Email
					input.col-md-8(id='email', name='email', type='email')
				p
					label.col-md-4(for='contact') Contact
					input.col-md-8(id='contact', name='contact', type='text')
				div.row
					p.col-md-4
						input(class='btn btn-success', type='submit', value='Create New User')
					p.col-md-8
						a(class='btn btn-primary', href='/login') Login Here
